{
  "name": "dockyard-electron",
  "version": "1.0.0",
  "description": "A flexible, open-source multi-app workspace built for power users.",
  "main": "out/main/main/index.js",
  "scripts": {
    "dev": "vite",
    "build:renderer": "vite build",
    "build:main": "node scripts/copy-main.js",
    "build:preload": "node scripts/copy-preload.js",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "start": "npm run build && electron .",
    "lint": "eslint src --ext .js,.jsx",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MayR-Labs/dockyard-electron.git"
  },
  "keywords": [
    "workspace",
    "open-source"
  ],
  "author": "Aghogho Meyoron (https://mayrlabs.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MayR-Labs/dockyard-electron/issues"
  },
  "homepage": "https://github.com/MayR-Labs/dockyard-electron#readme",
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/publisher-github": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.2",
    "electron-vite": "^4.0.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "autoprefixer": "^10.4.22",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^11.0.2",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.553.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17",
    "uuid": "^13.0.0",
    "zustand": "^5.0.8"
  }
}
